<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/textView4"
            android:layout_width="163dp"
            android:layout_height="239dp"
            android:text="En 7UP, estamos orgullosos de ser una de las marcas más icónicas y reconocidas en la industria de las bebidas refrescantes. Desde nuestros humildes comienzos hasta convertirnos en un líder global, hemos dejado una huella refrescante en la vida de millones de personas en todo el mundo."
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.064"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.184" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="268dp"
            android:layout_height="90dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/nosotros" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="163dp"
            android:layout_height="232dp"
            android:text="Nuestra historia comenzó en 1929, cuando Charles Leiper Grigg introdujo al mundo una bebida gaseosa única y revolucionaria: 7UP. Desde entonces, nos hemos destacado por ofrecer un sabor refrescante, burbujeante y único que ha deleitado a las generaciones durante más de 90 años."
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.064"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.672" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="155dp"
            android:layout_height="240dp"
            android:layout_marginTop="72dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.882"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/creador" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="161dp"
            android:layout_height="214dp"
            android:text="Nuestro equipo está conformado por individuos apasionados y creativos que comparten un objetivo común: ofrecer a nuestros consumidores la mejor experiencia de bebida refrescante posible."
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.936"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.709" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="338dp"
            android:layout_height="147dp"
            android:text="Gracias por elegir 7UP. Estamos emocionados de seguir refrescando el mundo y compartiendo momentos inolvidables junto a ti. Únete a nosotros en esta deliciosa aventura mientras continuamos evolucionando y brindando el sabor que tanto te gusta.  ¡Refresca tu día con 7UP!"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.978" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="162dp"
            android:layout_height="43dp"
            android:text="Charles L. Grigg, creador de 7up."
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.907"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.423"
            android:textStyle="bold"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
